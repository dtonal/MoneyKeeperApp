<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBakery"
    android:id="@+id/layoutCost"
    style="@style/Base.TextAppearance.AppCompat.Title">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_bakery"
        android:id="@+id/imageStore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"/>

    <CheckBox
        android:id="@+id/checkCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"/>

    <TextView
        android:text="textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPrice"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:textColor="@android:color/black"
        android:layout_alignBottom="@+id/checkCost"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="textCreatedAtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3sp"
        android:id="@+id/textCreatedAtDate"
        android:layout_alignTop="@+id/checkCost"
        android:layout_alignParentEnd="true" />

</RelativeLayout>