<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.dtonal.moneykeeperapp.StatusFragment"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATUM"
        android:textAlignment="center"
        android:textSize="@dimen/status_header"
        android:textColor="@android:color/black"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/activity_horizontal_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tag"
                android:textSize="@dimen/status_row"
                android:textColor="@android:color/black"
                android:textAlignment="center"/>
            <TextView
                android:paddingBottom="@dimen/status_row_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(12.Tag)"
                android:textSize="@dimen/status_row"
                android:visibility="invisible"
                android:textAlignment="center"/>
            <LinearLayout
                android:paddingBottom="@dimen/status_row_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Soll:"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/status_row"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/textGivenDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25 €"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/status_row"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:paddingBottom="@dimen/status_row_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ist:"
                    android:textSize="@dimen/status_row"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/textActualDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25 €"
                    android:textSize="@dimen/status_row"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/textResultDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+5 €"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Woche"
                android:textSize="@dimen/status_row"
                android:textColor="@android:color/black"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/textDayOfWeek"
                android:paddingBottom="@dimen/status_row_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(12.Tag)"
                android:textSize="@dimen/status_row"
                android:textAlignment="center"/>
            <LinearLayout
                android:paddingBottom="@dimen/status_row_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Soll:"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/status_row"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/textGivenWeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25 €"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/status_row"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:paddingBottom="@dimen/status_row_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ist:"
                    android:textSize="@dimen/status_row"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/textActualWeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25 €"
                    android:textSize="@dimen/status_row"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"/>

            </LinearLayout>
            <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/textResultWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+5 €"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monat"
                android:textSize="@dimen/status_row"
                android:textColor="@android:color/black"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/textDayOfMonth"
                android:paddingBottom="@dimen/status_row_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(12.Tag)"
                android:textSize="@dimen/status_row"
                android:textAlignment="center"/>
            <LinearLayout
                android:paddingBottom="@dimen/status_row_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Soll:"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/status_row"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/textGivenMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25 €"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/status_row"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:paddingBottom="@dimen/status_row_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ist:"
                    android:textSize="@dimen/status_row"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/textActualMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25 €"
                    android:textSize="@dimen/status_row"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/textResultMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+5 €"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:textAlignment="textEnd"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="40dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="900 € pro Monat"
        android:textAlignment="center"
        android:textSize="@dimen/status_header"
        android:textColor="@android:color/black"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30 € pro Tag"
        android:textAlignment="center"
        android:textSize="@dimen/status_header"
        android:textColor="@android:color/black"/>
    </LinearLayout>
</LinearLayout>
