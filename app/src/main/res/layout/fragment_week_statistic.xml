<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="-16dp"
    android:layout_marginEnd="-16dp"
    tools:context="de.dtonal.moneykeeperapp.WeekStatisticFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            <TextView
                android:id="@+id/textCalendarWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="KW ??"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/textWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Week"
                android:textSize="16sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textSum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="43,00 â‚¬"
            android:gravity="center"
            android:textColor="@android:color/black"/>

    </LinearLayout>
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chartWeekStatistics"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <ListView
        android:id="@+id/listStoreSumPerWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>
